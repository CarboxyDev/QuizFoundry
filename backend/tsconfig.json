{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "rootDir": ".",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@utils/*": [
                "../packages/utils/*"
            ],
            "@types/*": [
                "../packages/types/*"
            ]
        }
    },
    "include": [
        "**/*.ts"
    ],
    "references": [
        {
            "path": "../packages/utils"
        },
        {
            "path": "../packages/types"
        }
    ],
}
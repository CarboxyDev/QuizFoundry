{
  "name": "mono-sandbox",
  "private": true,
  "version": "1.0.0",
  "devDependencies": {
    "concurrently": "^9.2.0",
    "prettier": "^3.6.1",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "concurrently \"pnpm dev:frontend\" \"pnpm dev:backend\"",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "nodemon --watch . --ext ts --exec ts-node index.ts"
  }
}